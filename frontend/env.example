# Frontend Environment Variables
# Copy this file to .env.local and update values

# Backend API URL (REQUIRED - used for API proxy in next.config.js)
# Development: http://localhost:5000
# Production Examples:
#   - Subdomain: https://api.yourdomain.com
#   - Same domain: https://yourdomain.com/api (if using reverse proxy)
#   - Different domain: https://api-service.com
NEXT_PUBLIC_API_URL=http://localhost:5000

# Frontend Port (optional, defaults to 3000 for Next.js)
# Next.js automatically uses PORT environment variable if set
# If not set, Next.js defaults to port 3000
# To use port 3300, set: PORT=3300
PORT=3300

